<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 menu-card">
            <h3 class="margin-thirty">Hand tossed Pizzas &amp; Pies since 1996</h3>
            <a class="btn btn-dark order-start-btn margin-fifteen" href="./menu-pizza.html">Order Now!</a>
        </div>
    </div>
</div>

<div class="container" id="reviews-container">
    {{#if loggedIn}}
    <div class="row margin-thirty justify-content-center">
        <div class="col form-background">
            <form class="margin-fifteen review-form">
                <div class="form-group">
                    <label for="reviewID">Enter a Review</label>
                    <input type="text" class="form-control" id="reviewID"
                        placeholder="Let us know how we are doing.">
                </div>
                <div class="text-centered">
                    <button type="submit" class="btn btn-dark">Submit Review</button>
                </div>
            </form>
        </div>
    </div>
    {{/if}}

    <div class="container flex justify-content-center margin-thirty">
        {{#if reviews.length}}
        {{#each reviews as |review|}}
        {{> review-info review }}
        {{/each}}
        {{else}}
        <div class="row no-gutters margin-five">
            <div class="col">
                <div class="card menu-card" style="width: 300px;">
                    <div class="card-body">
                        <p class="card-text">There aren't any reviews yet!</p>
                        <p>Be the first person to leave us a review!</p>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
    </div>
</div>

{{#if loggedIn}}
<script src="/js/reviews.js"></script>
{{/if}}